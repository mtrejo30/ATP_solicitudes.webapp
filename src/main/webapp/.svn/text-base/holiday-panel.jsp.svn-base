<%@ taglib prefix="spring" uri="http://www.springframework.org/tags" %>

<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

<div id="holiday_container" class="holiday_container">
	<form id="holiday_form">
		<fieldset>
			<legend>Info</legend>
			<div class="form-item">
				<label><spring:message code='holiday_name' />:</label>
				<input id="name" name="name" type="text">
			</div>
			<div class="form-item">
				<label><spring:message code='holiday_date' />:</label>
				<input id="date" name="date" readonly >
			</div>
		</fieldset>

		<br/>		
		<div align="center" id="errorContainer" class="errorContainer"></div>
	</form>
	
	<div align=center>
		<input id=saveHolidayButton type=submit value="<spring:message code='Accept' />">
		<input id=cancelHolidayButton type=button value="<spring:message code='Cancel' />">
	</div>
</div>