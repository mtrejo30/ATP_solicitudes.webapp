body
{
	color: 				#333333;
	font-family: 		Verdana, Arial, Geneva, Helvetica, sans-serif;
	font-size: 			12px;
	line-height: 		1.2em;
}

h1
{
	font-size:		17px;
	font-weight: 	bolder;
}
	
h2
{
	font-size:		12px;
	font-weight: 	bold;	
}

h3
{
	
}

input[type="text"],input[type="password"],
select,input[type="file"],input[type="submit"],
input[type="button"],
textarea
{
	margin:			4px 4px 0;
	border: 		2px solid #A8A8A8;
	padding: 		3px;
	resize: 		none;
	background:		white;
}

input[type="submit"],
input[type="button"]
{
	background: 		none repeat scroll 0 0 #4CC8E4;
	color: 				#FFFFFF;
	font-size: 			10px;
	padding: 			5px 10px;
	/*text-transform: 	uppercase;*/
	cursor:	pointer;
}

.inputToUppercase
{
	text-transform:		uppercase;
}

label
{
	display: inline-block;
	width: 120px !important;
	text-align:	right;
}

.noPaddingTable tr,
.noPaddingTable td
{
	padding: 0px;
}

/*
Panels
*/
.panel_container
{
}

.panel_container input,
.panel_container select
{
	width: 250px;
}
.panel_container input[type="submit"],
.panel_container input[type="button"]
{
	width: auto !important;
}

.textTop
{
	vertical-align: top;
}

.errorContainer
{
	color: 			red;
	text-align: 	center;
}

.rightAlignColumns label
{
	text-align: 	right;
}

.login_container
{
	padding: 		10px 0 10px;
	background: 	none repeat scroll 0 0 #F0F6FA;
	width: 			500px;
	border: 		1px solid #D4D4D4;
	margin: 		0 auto;
	overflow:		hidden;
}

.new_password_container
{
	padding: 		19px 0 16px;
	background: 	none repeat scroll 0 0 #F0F6FA;
	width: 			500px;
	border: 		1px solid #D4D4D4;
 	margin: 		0 auto; 
	overflow:		hidden;
	white-space:	nowrap;
}

.form-item
{
	margin-bottom:	5px;
	clear:			both;
}

.form-item label
{
	width: 			130px	!important;
}

.errorMessage
{
	color:			red;
}

.user_admin_container label
{
	width: 			150px !important;
}


.document_container input[type="file"],
.document_container input[type="text"],
.document_container select,
.document_container textarea
{
	width:		300px !important;
}
.document_container label
{
	width:		100px !important;
}

.solicitud_container input[type="text"],
.solicitud_container select,
.solicitud_container textarea
{
	width:		300px !important;
}
.solicitud_container label
{
	width:		100px !important;
}


.wideFields input[type="text"],
.wideFields input[type="password"],
.wideFields select,
.wideFields textarea
{
	width: 			200px;
}

.odd
{
	background:		none repeat scroll 0 0 #B4B4DE;
}

/*Loading Plugin */
.loading-indicator
{
	height: 				80px;
	width: 					80px;
	background: 			url( '../images/loading.gif' );
	background-repeat: 		no-repeat;
	background-position: 	center center;
}
.loading-indicator-overlay
{
	background-color: 		#FFFFFF;
	opacity: 				0.6;
	filter: 				alpha(opacity=60);
}

/*Resize Image*/
.imageSmall img
{
	width: 		150px; 
	height:		110px;
	border: 	1px solid #D4D4D4;
}

.linkNoDecoration 
{
	text-decoration: none;
}

/*NavigationBar*/

.nav{
                position: absolute;
                margin-top: 0;
            }
            .nav li {
                list-style:none;
                float:left;
            }

