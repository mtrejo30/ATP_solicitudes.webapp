            .nav li ul {
                position:absolute;
                visibility:hidden;
                margin:0;
                padding:0;
                background:#f4f8fc;
                border:solid 1px #c1d7eb;
            }

            .nav li ul li {
                display:inline;
                float:none;
            }

            .nav li ul li a{
                background-color:#f4f8fc;
                border:solid 0.5px #c2d8ec;
            }

            .nav li ul li a:hover {
                background-color:#e5eef7;
            }

            .container {
                padding-right: 15px;
                padding-left: 15px;
                margin-right: auto;
                margin-left: auto;
                width: 80%;
                min-height:140px;
                text-align:center;
            }

            .logo, .login{
                width: 25%;
                float: left;
                position: relative;
                min-height: 1px;
                text-align:right;
            }
            
            .login{
            text-align:left;
            padding-top:56px;
            }
            
            .login .navigationBar{
            padding-left:0px;
            }
            
            .titulo{
                width: 50%;
                float: left;
                position: relative;
                min-height: 1px;
                padding-top:50px;
            }
            
            .sub-menu{
            width:150px   }
            

.nav li 
{
    list-style:none;
    float:right;
}

.nav li a:link, .myMenu li a:visited 
{
    display:block;
    
}

.nav li ul
{
    position:absolute;
    visibility:hidden;  
}

.nav li ul li 
{
    display:inline;
    float:none;
}         
			
.navigationBar 
{
	font: 95% "Trebuchet MS", Verdana,Arial,Geneva,Helvetica,sans-serif;
	margin-top: 1px;
	list-style: none;
	z-index: 9999;
}

.navigationBar li
{
	display: inline-block;
}

.navigationBar li a 
{
	border: 1px solid #ACCFE8;
	border-width: 1px 1px 1px 1px;
	text-decoration: none;
	color: #3366CC;
	background: #F0F7FC;
	padding: 5px 10px;
}

.navigationBar a:hover
{
	background: #DBEBF6;
}

.navigationBar a.menuHighlight
{
	background: #FFFFFF
}

/* submenu */

.navigationBar ul
{
	display: none;
	position: absolute;
	margin-left: 0px;
	list-style: none;
	padding: 0px;
	z-index: 9999;
}

.navigationBar ul li
{
	display: block;
}

.navigationBar ul li a
{
 	display: block;
 	text-align: left;
}

